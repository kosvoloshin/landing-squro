extends ../template

block variables
    - var title = 'Login'

block content
    .wrapper
        .login
            .login__block
                .login__logo
                    a(href="/")
                        img(src="./assets/images/login-logo.png" alt="logo")
                form.login__form
                    input.login__input.user(type="text" placeholder="username")
                    input.login__input.password(type="password" placeholder="password")
                    .login__fail.hide invalid login/password
                    button.login__button(type="submit") continue